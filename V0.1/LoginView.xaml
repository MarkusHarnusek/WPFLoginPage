<Window x:Class="UltiKeep.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UltiKeep.View"
        mc:Ignorable="d"
        Title="UltiKeep Login" 
        Height="450" 
        Width="300"
        Background="#2E2C2F"
        ResizeMode="NoResize">

    <StackPanel>
        <TextBlock
            Text="UltiKeep"
            FontSize="30"
            FontFamily="Montserrat"
            FontWeight="SemiBold"
            HorizontalAlignment="Center"
            Foreground="#F3E8EE"
            Margin="0,10,0,0"/>

        <TextBlock 
            Text="The place to keep your passwords"
            FontSize="14"
            FontFamily="Montserrat"
            FontWeight="Normal"
            HorizontalAlignment="Center"
            Foreground="#BACDB0"
            Margin="0,-5,0,0"/>

        <TextBlock 
            Text="Login"
            FontSize="20"
            FontFamily="Montserrat"
            FontWeight="Medium"
            HorizontalAlignment="Center"
            Foreground="#F3E8EE"
            Margin="0,25,0,0"/>

        <TextBlock
            HorizontalAlignment="Center"
            Margin="0,25,0,0"
            Text="Username"
            FontSize="14"
            FontWeight="Light"
            FontFamily="Montserrat"
            Foreground="#BACDB0"/>

        <Border 
            Margin="50,-2,25,0"
            Height="25"
            Background="Transparent"
            BorderBrush="#BACDB0"
            BorderThickness="2"
            CornerRadius="12.5">
            <TextBox 
                x:Name="Txt_UserName"
                Background="Transparent"
                BorderThickness="0"
                VerticalAlignment="Center"
                Margin="5,0,5,0"
                FontFamily="Montserrat"
                Foreground="#F3E8EE"/>
        </Border>

        <Image
            Source="pack://application:,,,/UltiKeep;component/Assets/UserIconWhite.png"
            Width="25"
            Height="25"
            Margin="0,-25,230,0"/>


        <TextBlock
            HorizontalAlignment="Center"
            Margin="0,15,0,0"
            Text="Password"
            FontSize="14"
            FontWeight="Light"
            FontFamily="Montserrat"
            Foreground="#BACDB0"/>

        <Border 
            Margin="50,-2,50,0"
            Height="25"
            Background="Transparent"
            BorderBrush="#BACDB0"
            BorderThickness="2"
            CornerRadius="12.5">
            <Grid>
                <PasswordBox 
                   x:Name="Pwd_Password"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="5,0,5,0"
                    VerticalAlignment="Center"
                    PasswordChar="•"
                    Foreground="#F3E8EE"
                    Visibility="Visible"/>

                <TextBox 
                    x:Name="Txt_Password"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    Margin="5,0,5,0"
                    FontFamily="Montserrat"
                    Foreground="#F3E8EE"
                    Visibility="Collapsed"/>
            </Grid>
        </Border>

        <Image
            Source="pack://application:,,,/UltiKeep;component/Assets/KeyIconWhite.png"
            Width="25"
            Height="25"
            Margin="0,-25,230,0"/>

        <Button
            x:Name="Btn_TogglePasswordVisibility"
            Click="Btn_TogglePasswordVisibility_Click"
            MouseEnter="Btn_TogglePasswordVisibility_MouseEnter" 
            MouseLeave="Btn_TogglePasswordVisibility_MouseLeave"
            Background="#475B63"
            Width="25"
            Height="25"
            Margin="230,-25,0,0"
            BorderBrush="Transparent">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" 
                            Value="#2E2C2F"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" 
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#F3E8EE"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="25"
                            Height="25"
                            CornerRadius="12.5" 
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>

            <Image
                x:Name="EyeIcon"
                Source="pack://application:,,,/UltiKeep;component/Assets/EyeOpenIconWhite.png"
                Width="20"
                Height="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Button>


        <Button x:Name="Btn_Login" 
            Foreground="#F3E8EE"
            BorderThickness="0" 
            FontSize="16" 
            Content="Log In"
            FontFamily="Montserrat"
            Cursor="Hand"
            Margin="0,30,0,0" 
            Click="Btn_Login_Click">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" 
                            Value="#729B79"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" 
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#BACDB0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="70" Height="30" CornerRadius="14" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBlock
            Text="Don't have an Account yet?"
            FontSize="13"
            FontWeight="Light"
            FontFamily="Montserrat"
            Background="Transparent"
            Foreground="#F3E8EE"
            TextAlignment="Left"
            Margin="20,40,20,0"/>

        <Button
            x:Name="Btn_SignUp"
            Click="Btn_SignUp_Click" 
            MouseEnter="Btn_SignUp_MouseEnter"
            MouseLeave="Btn_SignUp_MouseLeave"
            Content="Sign Up"
            Height="20"
            HorizontalAlignment="Center"
            Margin="190,-18,0,0"
            FontSize="13"
            FontFamily="Montserrat"
            FontWeight="Light"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            BorderThickness="0"
            Background="Transparent"
            Foreground="#F3E8EE">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" 
                      Value="#2E2C2F"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" 
                           Value="True">
                            <Setter Property="Background"
                              Value="#F3E8EE"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="60" Height="20" CornerRadius="10" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBlock
            Text="Forgot Password?"
            FontSize="13"
            FontWeight="Light"
            FontFamily="Montserrat"
            Background="Transparent"
            Foreground="#F3E8EE"
            TextAlignment="Left"
            Margin="20,5,10,0"/>

        <Button
            x:Name="Btn_ResetPassword"
            Click="Btn_ResetPassword_Click"
            MouseEnter="Btn_ResetPassword_MouseEnter" 
            MouseLeave="Btn_ResetPassword_MouseLeave"
            Content="Reset Password"
            Height="20"
            HorizontalAlignment="Center"
            Margin="140,-18,0,0"
            FontSize="13"
            FontFamily="Montserrat"
            FontWeight="Light"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            BorderThickness="0"
            Background="Transparent"
            Foreground="#F3E8EE">

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" 
                            Value="#2E2C2F"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" 
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#F3E8EE"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="110" Height="20" CornerRadius="10" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </StackPanel>

</Window>